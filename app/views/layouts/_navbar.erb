 <div class = "navbar">
    <div class="nav-links">
        <% if user_signed_in? %>
            <div class="user-info hidden md:block">
                Welcome <b><%= current_user.email %></b>
            </div>
            <div class="bridge">
                <%= link_to "Home", root_path, class: "nav-link sm:block hidden" %>
                <%= link_to "Foods", user_foods_path(current_user), class: "nav-link" %>
                <%= link_to "Recipes", user_recipes_path(current_user), class: "nav-link" %>
                <%= link_to "Edit Profile", edit_user_registration_path, class: "nav-link hidden sm:block" %>
                <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "logout-btn" %>
            </div>
        <% else %>
            <%= link_to "Home", root_path, class: "nav-link" %>
            <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
        <% end %>
    </div>
</div>